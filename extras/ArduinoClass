import java.io.PrintStream;
import java.io.File;
import java.util.Scanner;
import java.io.FileNotFoundException;

public class ScriptEditor{
	
	private Scanner editor;

	
	public static void main (String []args)throws FileNotFoundException{
		System.out.println("Welcome to the Arduino Library Template Maker");
		System.out.println("This program will ask you a few questions, and create an arduino library");
		
		ScriptEditor helper=new ScriptEditor();
		helper.getFile("Template.cpp");
		System.out.println("Now writing to file");
		PrintStream output=new PrintStream(new File("test.txt"));	
		output.println("This is a test");
	}
	/*
	* Creates a new Script editor object
	*/
	public ScriptEditor(){
			
		
	}
	private void getFile(String fileName)throws FileNotFoundException{
		
		File f=new File(fileName);
		editor=new Scanner(f);
		
		String s=editor.nextLine();
		System.out.println(s);
		
	}
	
	
	
}