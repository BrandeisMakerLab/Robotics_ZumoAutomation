public enum ArduinoClassFields {
	
    CLASSNAME (3.303e+23, 2.4397e6),
    AUTHOR   (4.869e+24, 6.0518e6),
    ORGANIZATION   (5.976e+24, 6.37814e6),
    HEADERCOMMENTS    (6.421e+23, 3.3972e6),
    SUPPORTEDBOARDS (1.9e+27,   7.1492e7),
    VARIABLES  (5.688e+26, 6.0268e7),
    PRIVATEMETHODS  (8.686e+25, 2.5559e7),
    PUBLICMETHODS (1.024e+26, 2.4746e7);

    public final String prompt;//the prompt for the user
    public final String format; //the proper formatting of the field
    
    /** A private constructor to create an enum with prompt and format
     * */
    ArduinoClassFields(String prompt, String format) {
        this.prompt = prompt;
        this.format = format;
    }


    // universal gravitational constant  (m3 kg-1 s-2)
    public static final double G = 6.67300E-11;

    double surfaceGravity() {
        return G * mass / (radius * radius);
    }
    double surfaceWeight(double otherMass) {
        return otherMass * surfaceGravity();
    }
    public static void main(String[] args) {
        if (args.length != 1) {
            System.err.println("Usage: java ArduinoClassFields <earth_weight>");
            System.exit(-1);
        }
        double earthWeight = Double.parseDouble(args[0]);
        double mass = earthWeight/EARTH.surfaceGravity();
        for (f p : f.values())
           System.out.printf("Your weight on %s is %f%n",
                             p, p.surfaceWeight(mass));
    }
}

